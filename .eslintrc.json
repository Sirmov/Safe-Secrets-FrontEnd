{
    "env": {
        "browser": true,
        "es2021": true
    },
    "globals": {
        "global": "readonly"
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier", "plugin:import/recommended"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "import"],
    "settings": {
        "react": {
            "version": "detect"
        },
        "import/resolver": {
            "alias": {
                "map": [
                    ["@", "./src"],
                    ["@assets", "./src/assets"],
                    ["@contexts", "./src/contexts"],
                    ["@layout", "./src/layout"],
                    ["@services", "./src/services"],
                    ["@pages", "./src/pages"],
                    ["@components", "./src/components"],
                    ["@hooks", "./src/hooks"],
                    ["@validators", "./src/validators"],
                    ["@utils", "./src/utils"]
                ],
                "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
            }
        }
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single", { "avoidEscape": true }],
        "semi": ["error", "always"],
        "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
        "react/prop-types": ["off"],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "import/no-namespace": ["error", { "ignore": ["*.ext"] }]
    }
}
